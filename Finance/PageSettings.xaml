<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/maui/global"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Finance.PageSettings"
             x:DataType="PageSettings">

    <NavigationPage.TitleView>
        <Label
            x:Name="lblTitlePage"
            Style="{StaticResource labelStyleTitleView}"
            Text="{Translate Settings_Text}">
        </Label>
    </NavigationPage.TitleView>

    <Grid
        RowDefinitions="Auto, *, Auto"
        HorizontalOptions="Center"
        Margin="5">

        <ScrollView
            Grid.Row="1"
            Grid.Column="0"
            Orientation="Vertical">

            <Grid
                Style="{StaticResource gridStyleSettings}"
                RowDefinitions="Auto, 4, Auto, 4, Auto, 4, Auto, 4, Auto, 4, Auto, Auto, 4, Auto, Auto, 4, Auto, Auto, Auto, 4, Auto, Auto, Auto, 4, Auto, 4, Auto">

                <Border
                    Style="{StaticResource borderStyleDefault}"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2">

                    <Label
                        x:Name="lblExplanation"
                        Style="{StaticResource labelStyleExplanation}"
                        Text="{Translate SettingsSaved_Text}">
                    </Label>
                </Border>
                
                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    VerticalTextAlignment="Center"
                    Text="{Translate Language_Text}">
                </Label>

                <Border
                    Style="{StaticResource borderStyleDefault}"
                    Grid.Row="2"
                    Grid.Column="1">

                    <Picker
                        x:Name="pckLanguage"
                        VerticalOptions="Center"
                        MinimumWidthRequest="160"
                        VerticalTextAlignment="Center"
                        SelectedIndexChanged="OnPickerLanguageChanged"
                        IsEnabled="True">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Čeština</x:String>
                                <x:String>Dansk</x:String>
                                <x:String>Deutsch</x:String>
                                <x:String>English</x:String>
                                <x:String>Español</x:String>
                                <x:String>Français</x:String>
                                <x:String>Italiano</x:String>
                                <x:String>Magyar</x:String>
                                <x:String>Nederlands</x:String>
                                <x:String>Norsk</x:String>
                                <x:String>Polski</x:String>
                                <x:String>Português</x:String>
                                <x:String>Română</x:String>
                                <x:String>Suomi</x:String>
                                <x:String>Svenska</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </Border>

                <Label
                    Style="{StaticResource labelStyleDefault}"
                    Grid.Row="4"
                    Grid.Column="0"
                    Text="{Translate Theme_Text}">
                </Label>

                <Border
                    Style="{StaticResource borderStyleDefault}"
                    Grid.Row="4"
                    Grid.Column="1">

                    <Picker
                        x:Name="pckTheme"
                        VerticalOptions="Center"
                        MinimumWidthRequest="160"
                        VerticalTextAlignment="Center"
                        SelectedIndexChanged="OnPickerThemeChanged">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>System</x:String>
                                <x:String>Light</x:String>
                                <x:String>Dark</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </Border>

                <Label
                    Style="{StaticResource labelStyleDefault}"
                    Grid.Row="6"
                    Grid.Column="0"
                    Text="{Translate NumDec_Text}">
                </Label>

                <Border
                    x:Name="brdNumDec"
                    Style="{StaticResource borderStyleDefault}"
                    Grid.Row="6"
                    Grid.Column="1">

                    <Entry
                        x:Name="entNumDec"
                        Style="{StaticResource entryStyleNumericNext}"
                        Text="2"
                        Placeholder="0 - 4"
                        MaxLength="1"
                        Completed="VerifyNumberDecimals"
                        TextChanged="VerifyNumberDecimals">
                        <Entry.Triggers>
                            <EventTrigger Event="TextChanged">
                                <ValidationTriggerActionDecimal MinValue="0" MaxValue="4"/>
                            </EventTrigger>
                        </Entry.Triggers>
                    </Entry>
                </Border>

                <Label
                    Style="{StaticResource labelStyleDefault}"
                    Grid.Row="8"
                    Grid.Column="0"
                    Text="{Translate PercDec_Text}">
                </Label>

                <Border
                    x:Name="brdPercDec"
                    Style="{StaticResource borderStyleDefault}"
                    Grid.Row="8"
                    Grid.Column="1">

                    <Entry
                        x:Name="entPercDec"
                        Style="{StaticResource entryStyleNumericNext}"
                        Text="2"
                        Placeholder="0 - 8"
                        MaxLength="1"
                        Completed="VerifyPercentageDecimals"
                        TextChanged="VerifyPercentageDecimals">
                        <Entry.Triggers>
                            <EventTrigger Event="TextChanged">
                                <ValidationTriggerActionDecimal MinValue="0" MaxValue="8"/>
                            </EventTrigger>
                        </Entry.Triggers>
                    </Entry>
                </Border>

                <Label
                    Style="{StaticResource labelStyleDefault}"
                    Grid.Row="10"
                    Grid.Column="0"
                    Text="{Translate DateFormat_Text}">
                </Label>

                <Border
                    Style="{StaticResource borderStyleGroup}"
                    Grid.Row="10"
                    Grid.Column="1"
                    Grid.RowSpan="2">
                </Border>
                
                <RadioButton
                    x:Name="rbnDateFormatSystem"
                    Grid.Row="10"
                    Grid.Column="1"
                    GroupName="rbgDateFormat"
                    Value="rbnDateFormatSystem"
                    Content="{Translate System_Text}"
                    CheckedChanged="OnDateFormatRadioButtonCheckedChanged">
                </RadioButton>
                
                <RadioButton
                    x:Name="rbnDateFormatISO8601"
                    Grid.Row="11"
                    Grid.Column="1"
                    GroupName="rbgDateFormat"
                    Value="rbnDateFormatISO8601"
                    Content="{Translate DateISO8601_Text}"
                    IsChecked="True"
                    CheckedChanged="OnDateFormatRadioButtonCheckedChanged">
                </RadioButton>
            
                <Label
                    Style="{StaticResource labelStyleDefault}"
                    Grid.Row="13"
                    Grid.Column="0"
                    Text="{Translate PageFormat_Text}">
                </Label>

                <Border
                    Style="{StaticResource borderStyleGroup}"
                    Grid.Row="13"
                    Grid.Column="1"
                    Grid.RowSpan="2">
                </Border>
                
                <RadioButton
                    x:Name="rbnPageFormatA4"
                    Grid.Row="13"
                    Grid.Column="1"
                    GroupName="rbgPageFormat"
                    Value="rbnPageFormatA4"
                    Content="{Translate PageA4_Text}"
                    IsChecked="True"
                    CheckedChanged="OnPageFormatRadioButtonCheckedChanged">
                </RadioButton>

                <RadioButton
                    x:Name="rbnPageFormatLetter"
                    Grid.Row="14"
                    Grid.Column="1"
                    GroupName="rbgPageFormat"
                    Value="rbnPageFormatLetter"
                    Content="{Translate PageLetter_Text}"
                    CheckedChanged="OnPageFormatRadioButtonCheckedChanged">
                </RadioButton>

                <Label
                    Style="{StaticResource labelStyleDefault}"
                    Grid.Row="16"
                    Grid.Column="0"
                    Text="{Translate RoundNumber_Text}">
                </Label>

                <Border
                    Style="{StaticResource borderStyleGroup}"
                    Grid.Row="16"
                    Grid.Column="1"
                    Grid.RowSpan="3">
                </Border>
                
                <RadioButton
                    x:Name="rbnRoundNumberAwayFromZero"
                    Grid.Row="16"
                    Grid.Column="1"
                    GroupName="rbgRoundNumber"
                    Value="rbnRoundNumberAwayFromZero"
                    Content="{Translate RoundNumberAwayFromZero_Text}"
                    CheckedChanged="OnRoundNumberRadioButtonCheckedChanged">
                </RadioButton>

                <RadioButton
                    x:Name="rbnRoundNumberToEven"
                    Grid.Row="17"
                    Grid.Column="1"
                    GroupName="rbgRoundNumber"
                    Value="rbnRoundNumberToEven"
                    Content="{Translate RoundNumberToEven_Text}"
                    IsChecked="True"
                    CheckedChanged="OnRoundNumberRadioButtonCheckedChanged">
                </RadioButton>

                <RadioButton
                    x:Name="rbnRoundNumberToZero"
                    Grid.Row="18"
                    Grid.Column="1"
                    GroupName="rbgRoundNumber"
                    Value="rbnRoundNumberToZero"
                    Content="{Translate RoundNumberToZero_Text}"
                    CheckedChanged="OnRoundNumberRadioButtonCheckedChanged">
                </RadioButton>

                <Label
                    Style="{StaticResource labelStyleDefault}"
                    Grid.Row="20"
                    Grid.Column="0"
                    Text="{Translate Keyboard_Text}">
                </Label>

                <Border
                    Style="{StaticResource borderStyleGroup}"
                    Grid.Row="20"
                    Grid.Column="1"
                    Grid.RowSpan="3">
                </Border>
                
                <RadioButton
                    x:Name="rbnKeyboardDefault"
                    Grid.Row="20"
                    Grid.Column="1"
                    GroupName="rbgKeyboard"
                    Value="rbnKeyboardDefault"
                    Content="{Translate Default_Text}"
                    CheckedChanged="OnKeyboardRadioButtonCheckedChanged">
                </RadioButton>

                <RadioButton
                    x:Name="rbnKeyboardNumeric"
                    Grid.Row="21"
                    Grid.Column="1"
                    GroupName="rbgKeyboard"
                    Value="rbnKeyboardNumeric"
                    Content="{Translate Numeric_Text}"
                    IsChecked="True"
                    CheckedChanged="OnKeyboardRadioButtonCheckedChanged">
                </RadioButton>

                <RadioButton
                    x:Name="rbnKeyboardText"
                    Grid.Row="22"
                    Grid.Column="1"
                    GroupName="rbgKeyboard"
                    Value="rbnKeyboardText"
                    Content="{Translate Text_Text}"
                    CheckedChanged="OnKeyboardRadioButtonCheckedChanged">
                </RadioButton>

                <Label
                    Style="{StaticResource labelStyleDefault}"
                    Grid.Row="24"
                    Grid.Column="0"
                    Text="{Translate NegativeNumberRed_Text}">
                </Label>

                <Switch
                    x:Name="swtColorNumber"
                    Grid.Row="24"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Toggled="OnSwtColorNumberToggled">
                </Switch>


            </Grid>
        </ScrollView>

        <Button
            Style="{StaticResource buttonStyleFixedStart}"
            Grid.Row="2"
            Text="{Translate Save_Text}"
            SemanticProperties.Description="{Translate ToolTipSettingsSave_Text}"
            ToolTipProperties.Text="{Translate ToolTipSettingsSave_Text}"
            Clicked="OnSettingsSaveClicked">
        </Button>

        <Button
            Style="{StaticResource buttonStyleFixedEnd}"
            Grid.Row="2"
            Text="{Translate Reset_Text}"
            SemanticProperties.Description="{Translate ToolTipSettingsReset_Text}"
            ToolTipProperties.Text="{Translate ToolTipSettingsReset_Text}"
            Clicked="OnSettingsResetClicked">
        </Button>

    </Grid>
</ContentPage>
