<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/maui/global"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Finance.MainPage"
             Loaded="OnPageLoad"
             Appearing="OnPageAppearing">

    <NavigationPage.TitleView>
        <Grid 
            x:Name="grdTitleView"
            RowDefinitions="Auto"
            ColumnDefinitions="60, 230*, 50"
            Margin="5">

            <ImageButton
                x:Name="imgbtnAbout"
                Grid.Column="0"
                Source="info_32p.png"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                HeightRequest="32"
                WidthRequest="32"
                SemanticProperties.Description="{Translate Info_Text}"
                ToolTipProperties.Text="{Translate Info_Text}"
                Clicked="OnPageAboutClicked">
            </ImageButton>

            <Label
                x:Name="lblTitle"
                Style="{StaticResource labelStyleTitleView}"
                Grid.Column="1"
                FontSize="20"
                Text="Finance">
            </Label>

            <ImageButton
                x:Name="imgbtnSettings"
                Grid.Column="2"
                Source="settings_32p.png"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HeightRequest="32"
                WidthRequest="32"
                SemanticProperties.Description="{Translate Settings_Text}"
                ToolTipProperties.Text="{Translate Settings_Text}"
                Clicked="OnPageSettingsClicked">
            </ImageButton>
        </Grid>
    </NavigationPage.TitleView>
    
    <ScrollView>
        <StackLayout>
            <Grid
                Style="{StaticResource gridStyleMainMenu}"
                RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto">

                <Button
                    x:Name="btnInterestEffective"
                    Style="{StaticResource buttonStyleMenu}"
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="{Translate FinanceInterestEffective_Text}"
                    ToolTipProperties.Text="{Translate FinanceInterestEffective_Text}"
                    Clicked="OnPageInterestEffectiveClicked">
                </Button>

                <Button
                    x:Name="btnInterestEffectiveBE"
                    Style="{StaticResource buttonStyleMenu}"
                    Grid.Column="0"
                    Grid.Row="1"
                    Text="{Translate FinanceInterestEffectiveBE_Text}"
                    ToolTipProperties.Text="{Translate FinanceInterestEffectiveBE_Text}"
                    Clicked="OnPageInterestEffectiveBEClicked">
                </Button>

                <Button
                    x:Name="btnInterestAnnual"
                    Style="{StaticResource buttonStyleMenu}"
                    Grid.Column="0"
                    Grid.Row="2"
                    Text="{Translate FinanceInterestAnnual_Text}"
                    ToolTipProperties.Text="{Translate FinanceInterestAnnual_Text}"
                    Clicked="OnPageInterestAnnualClicked">
                </Button>

                <Button
                    x:Name="btnInterestMonthDay"
                    Style="{StaticResource buttonStyleMenu}"
                    Grid.Column="0"
                    Grid.Row="3"
                    Text="{Translate FinanceInterestMonthDay_Text}"
                    ToolTipProperties.Text="{Translate FinanceInterestMonthDay_Text}"
                    Clicked="OnPageInterestMonthDayClicked">
                </Button>

                <Button
                    x:Name="btnInterestPayDiscount"
                    Style="{StaticResource buttonStyleMenu}"
                    Grid.Column="0"
                    Grid.Row="4"
                    Text="{Translate FinanceInterestPayDiscount_Text}"
                    ToolTipProperties.Text="{Translate FinanceInterestPayDiscount_Text}"
                    Clicked="OnPageInterestPayDiscountClicked">
                </Button>

                <Button
                    x:Name="btnLoanDetail"
                    Style="{StaticResource buttonStyleMenu}"
                    Grid.Column="0"
                    Grid.Row="5"
                    Text="{Translate FinanceLoanDetail_Text}"
                    ToolTipProperties.Text="{Translate FinanceLoanDetail_Text}"
                    Clicked="OnPageLoanDetailClicked">
                </Button>

                <Button
                    x:Name="btnVATCalculation"
                    Style="{StaticResource buttonStyleMenu}"
                    Grid.Column="0"
                    Grid.Row="6"
                    Text="{Translate FinanceVATCalculation_Text}"
                    ToolTipProperties.Text="{Translate FinanceVATCalculation_Text}"
                    Clicked="OnPageVATCalculationClicked">
                </Button>

                <Button
                    x:Name="btnAmountGrossOfNet"
                    Style="{StaticResource buttonStyleMenu}"
                    Grid.Column="0"
                    Grid.Row="7"
                    Text="{Translate FinanceAmountGrossOfNet_Text}"
                    ToolTipProperties.Text="{Translate FinanceAmountGrossOfNet_Text}"
                    Clicked="OnPageAmountGrossOfNetClicked">
                </Button>

                <Button
                    x:Name="btnInvestmentReturn"
                    Style="{StaticResource buttonStyleMenu}"
                    Grid.Column="0"
                    Grid.Row="8"
                    Text="{Translate FinanceInvestmentReturn_Text}"
                    ToolTipProperties.Text="{Translate FinanceInvestmentReturn_Text}"
                    Clicked="OnPageInvestmentReturnClicked">
                </Button>

                <Button
                    x:Name="btnDifferenceNumbers"
                    Style="{StaticResource buttonStyleMenu}"
                    Grid.Column="0"
                    Grid.Row="9"
                    Text="{Translate FinanceDifferenceNumbers_Text}"
                    ToolTipProperties.Text="{Translate FinanceDifferenceNumbers_Text}"
                    Clicked="OnPageDifferenceNumbersClicked">
                </Button>

                <Button
                    x:Name="btnDifferenceDates"
                    Style="{StaticResource buttonStyleMenu}"
                    Grid.Column="0"
                    Grid.Row="10"
                    Text="{Translate FinanceDifferenceDates_Text}"
                    ToolTipProperties.Text="{Translate FinanceDifferenceDates_Text}"
                    Clicked="OnPageDifferenceDatesClicked">
                </Button>
            </Grid>

            <Image
                Source="finance_v3_128p.png"
                HeightRequest="80"
                WidthRequest="80"
                HorizontalOptions="Center"
                VerticalOptions="Center">
            </Image>

        </StackLayout>
    </ScrollView>
</ContentPage>
