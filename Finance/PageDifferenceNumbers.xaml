<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/maui/global"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Finance.PageDifferenceNumbers"
             Loaded="OnPageLoaded">

    <NavigationPage.TitleView>
        <Label
            x:Name="lblTitlePage"
            Style="{StaticResource labelStyleTitleView}"
            Text="{Translate DifferenceNumbersForm_Text}">
        </Label>
    </NavigationPage.TitleView>
    
    <ScrollView>
        <Grid
            Style="{StaticResource gridStyleMenuItems}"
            RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto">

            <Border
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3">

                <Label
                    Style="{StaticResource labelStyleExplanation}"
                    Text="{Translate DifferenceExplanationNumbers_Text}">
                </Label>
            </Border>

            <Label
                Style="{StaticResource labelStyleDefault}"
                Grid.Row="1"
                Grid.Column="0" 
                Text="{Translate Value1_Text}">
            </Label>

            <Border
                x:Name="brdValue1"
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="1"
                Grid.Column="1">

                <Entry
                    x:Name="entValue1"
                    Style="{StaticResource entryStyleNumericNext}"
                    Text=""
                    Focused="NumberEntryFocused"
                    Unfocused="NumberEntryUnfocused"
                    Completed="GoToNextField"
                    TextChanged="NumberEntryTextChanged">
                    <Entry.Triggers>
                        <EventTrigger Event="TextChanged">
                            <ValidationTriggerActionDecimal MinValue="-999999999999.9999" MaxValue="999999999999.9999"/>
                        </EventTrigger>
                    </Entry.Triggers>
                </Entry>
            </Border>

            <Label
                Style="{StaticResource labelStyleDefault}"
                Grid.Row="2"
                Grid.Column="0" 
                Text="{Translate Value2_Text}">
            </Label>

            <Border
                x:Name="brdValue2"
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="2"
                Grid.Column="1">

                <Entry
                    x:Name="entValue2"
                    Style="{StaticResource entryStyleNumericDone}"
                    Text=""
                    Focused="NumberEntryFocused"
                    Unfocused="NumberEntryUnfocused"
                    Completed="CalculateResult"
                    TextChanged="NumberEntryTextChanged">
                    <Entry.Triggers>
                        <EventTrigger Event="TextChanged">
                            <ValidationTriggerActionDecimal MinValue="-999999999999.9999" MaxValue="999999999999.9999"/>
                        </EventTrigger>
                    </Entry.Triggers>
                </Entry>
            </Border>

            <Label
                Style="{StaticResource labelStyleDefault}"
                Grid.Row="3"
                Grid.Column="0"
                Text="{Translate ValueDifference_Text}">
            </Label>

            <Border
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="3"
                Grid.Column="1">

                <Label
                    x:Name="lblValueDifference"
                    Style="{StaticResource labelStyleResult}">
                </Label>
            </Border>

            <Label
                Style="{StaticResource labelStyleDefault}"
                Grid.Row="4"
                Grid.Column="0"
                Text="{Translate ValuePercDifference_Text}">
            </Label>

            <Border
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="4"
                Grid.Column="1">

                <Label
                    x:Name="lblValuePercDifference"
                    Style="{StaticResource labelStyleResult}">
                </Label>
            </Border>

            <Label
                Style="{StaticResource labelStylePercent}"
                Grid.Row="4"
                Grid.Column="2">
            </Label>

            <Label
                Style="{StaticResource labelStyleDefault}"
                Grid.Row="5"
                Grid.Column="0"
                Text="{Translate ValuePercDiffValue1_Text}">
            </Label>

            <Border
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="5"
                Grid.Column="1">

               <Label
                   x:Name="lblValuePercDiffValue1"
                   Style="{StaticResource labelStyleResult}">
               </Label>
            </Border>

            <Label
                Style="{StaticResource labelStylePercent}"
                Grid.Row="5"
                Grid.Column="2">
            </Label>

            <Label
                Style="{StaticResource labelStyleDefault}"
                Grid.Row="6"
                Grid.Column="0"
                Text="{Translate ValuePercDiffValue2_Text}">
            </Label>

            <Border
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="6"
                Grid.Column="1">

                <Label
                    x:Name="lblValuePercDiffValue2"
                    Style="{StaticResource labelStyleResult}">
                </Label>
            </Border>

            <Label
                Style="{StaticResource labelStylePercent}"
                Grid.Row="6"
                Grid.Column="2">
            </Label>

            <Button
                Style="{StaticResource buttonStyleCalculate}"
                Grid.Row="7"
                Grid.Column="0"
                Text="{Translate Calculate_Text}"
                ToolTipProperties.Text="{Translate Calculate_Text}"
                Clicked="CalculateResult">
            </Button>

            <Button
                x:Name="btnReset"
                Style="{StaticResource buttonStyleReset}"
                Grid.Row="7"
                Grid.Column="1"
                Text="{Translate Reset_Text}"
                ToolTipProperties.Text="{Translate Reset_Text}"
                Clicked="ResetEntryFields">
            </Button>
            
            </Grid>
    </ScrollView>
</ContentPage>