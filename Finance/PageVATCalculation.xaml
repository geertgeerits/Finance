<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/maui/global"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Finance.PageVATCalculation"
             Loaded="OnPageLoaded">

    <NavigationPage.TitleView>
        <Label
            x:Name="lblTitlePage"
            Style="{StaticResource labelStyleTitleView}"
            Text="{Translate VATCalculationForm_Text}">
        </Label>
    </NavigationPage.TitleView>

    <ScrollView>
        <Grid
            Style="{StaticResource gridStyleMenuItems}"
            RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto">

            <Border
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3">

                <Label
                    Style="{StaticResource labelStyleExplanation}"
                    Text="{Translate VATCalculationExplanation_Text}">
                </Label>
            </Border>

            <Label
                Style="{StaticResource labelStyleDefault}"
                Grid.Row="1"
                Grid.Column="0" 
                Text="{Translate VATPercentage_Text}">
            </Label>

            <Border
                x:Name="brdVATPercentage"
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="1"
                Grid.Column="1">

                <Entry
                    x:Name="entVATPercentage"
                    AutomationId="Percentage"
                    Style="{StaticResource entryStyleNumericNext}"
                    Text="0"
                    Focused="NumberEntryFocused"
                    Unfocused="NumberEntryUnfocused"
                    Completed="GoToNextField"
                    TextChanged="NumberEntryTextChanged">
                    <Entry.Triggers>
                        <EventTrigger Event="TextChanged">
                            <ValidationTriggerActionDecimal MinValue="0" MaxValue="999.99999999"/>
                        </EventTrigger>
                    </Entry.Triggers>
                </Entry>
            </Border>

            <Label
                Style="{StaticResource labelStylePercent}"
                Grid.Row="1"
                Grid.Column="2">
            </Label>

            <Label
                Style="{StaticResource labelStyleDefault}"
                Grid.Row="2"
                Grid.Column="0" 
                Text="{Translate VATAmountExclusive_Text}">
            </Label>

            <Border
                x:Name="brdVATAmountExclusive"
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="2"
                Grid.Column="1">

                <Entry
                    x:Name="entVATAmountExclusive"
                    Style="{StaticResource entryStyleNumericNext}"
                    Text="0"
                    Focused="NumberEntryFocused"
                    Unfocused="NumberEntryUnfocused"
                    Completed="GoToNextField"
                    TextChanged="NumberEntryTextChanged">
                    <Entry.Triggers>
                        <EventTrigger Event="TextChanged">
                            <ValidationTriggerActionDecimal MinValue="0" MaxValue="999999999999.9999"/>
                        </EventTrigger>
                    </Entry.Triggers>
                </Entry>
            </Border>

            <Label
                Style="{StaticResource labelStyleDefault}"
                Grid.Row="3"
                Grid.Column="0"
                Text="{Translate VATAmount_Text}">
            </Label>

            <Border
                x:Name="brdVATAmount"
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="3"
                Grid.Column="1">

                <Entry
                    x:Name="entVATAmount"
                    Style="{StaticResource entryStyleNumericNext}"
                    Text="0"
                    Focused="NumberEntryFocused"
                    Unfocused="NumberEntryUnfocused"
                    Completed="GoToNextField"
                    TextChanged="NumberEntryTextChanged">
                    <Entry.Triggers>
                        <EventTrigger Event="TextChanged">
                            <ValidationTriggerActionDecimal MinValue="0" MaxValue="999999999999.9999"/>
                        </EventTrigger>
                    </Entry.Triggers>
                </Entry>
            </Border>

            <Label
                Style="{StaticResource labelStyleDefault}"
                Grid.Row="4"
                Grid.Column="0" 
                Text="{Translate VATAmountIncluded_Text}">
            </Label>

            <Border
                x:Name="brdVATAmountIncluded"
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="4"
                Grid.Column="1">

                <Entry
                    x:Name="entVATAmountIncluded"
                    Style="{StaticResource entryStyleNumericDone}"
                    Text="0"
                    Focused="NumberEntryFocused"
                    Unfocused="NumberEntryUnfocused"
                    Completed="CalculateResult"
                    TextChanged="NumberEntryTextChanged">
                    <Entry.Triggers>
                        <EventTrigger Event="TextChanged">
                            <ValidationTriggerActionDecimal MinValue="0" MaxValue="999999999999.9999"/>
                        </EventTrigger>
                    </Entry.Triggers>
                </Entry>
            </Border>

            <Button
                Style="{StaticResource buttonStyleCalculate}"
                Grid.Row="5"
                Grid.Column="0"
                Text="{Translate Calculate_Text}"
                ToolTipProperties.Text="{Translate Calculate_Text}"
                Clicked="CalculateResult">
            </Button>

            <Button
                x:Name="btnReset"
                Style="{StaticResource buttonStyleReset}"
                Grid.Row="5"
                Grid.Column="1"
                Text="{Translate Reset_Text}"
                ToolTipProperties.Text="{Translate Reset_Text}"
                Clicked="ResetEntryFields">
            </Button>
            
        </Grid>
    </ScrollView>
</ContentPage>
