<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/maui/global"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:Finance.Resources.Languages"
             xmlns:local="clr-namespace:Finance"
             x:Class="Finance.PageInterestEffective"
             Loaded="OnPageLoaded">

    <NavigationPage.TitleView>
        <Label
            x:Name="lblTitlePage"
            Style="{StaticResource labelStyleTitleView}"
            Text="{Translate InterestEffectiveForm_Text}">
        </Label>
    </NavigationPage.TitleView>
    
    <ScrollView>
        <Grid
            Style="{StaticResource gridStyleMenuItems}"
            RowDefinitions="Auto, Auto, Auto, Auto, Auto">

            <Border
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3">

                <Label
                    Style="{StaticResource labelStyleExplanation}"
                    Text="{Translate InterestEffectiveExplanation_Text}">
                </Label>
            </Border>
            
            <Label
                Style="{StaticResource labelStyleDefault}"
                Grid.Row="1"
                Grid.Column="0" 
                Text="{Translate InterestRate_Text}">
            </Label>

            <Border
                x:Name="brdInterestRate"
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="1"
                Grid.Column="1">

                <Entry
                    x:Name="entInterestRate"
                    AutomationId="Percentage"
                    Style="{StaticResource entryStyleNumericNext}"
                    Text=""
                    Placeholder="0 - 100"
                    Focused="NumberEntryFocused"
                    Unfocused="NumberEntryUnfocused"
                    Completed="GoToNextField"
                    TextChanged="NumberEntryTextChanged">
                    <Entry.Triggers>
                        <EventTrigger Event="TextChanged">
                            <local:ValidationTriggerActionDecimal MinValue="0" MaxValue="100"/>
                        </EventTrigger>
                    </Entry.Triggers>
                </Entry>
            </Border>

            <Label
                Style="{StaticResource labelStylePercent}"
                Grid.Row="1"
                Grid.Column="2">
            </Label>

            <Label
                Style="{StaticResource labelStyleDefault}"
                Grid.Row="2"
                Grid.Column="0"
                Text="{Translate PeriodsYear_Text}">
            </Label>

            <Border
                x:Name="brdPeriodsYear"
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="2"
                Grid.Column="1">

                <Entry
                    x:Name="entPeriodsYear"
                    Style="{StaticResource entryStyleNumericDone}"
                    Text="12"
                    Placeholder="1 - 12"
                    MaxLength="2"
                    Completed="CalculateResult"
                    TextChanged="NumberEntryTextChanged">
                    <Entry.Triggers>
                        <EventTrigger Event="TextChanged">
                            <local:ValidationTriggerActionDecimal MinValue="1" MaxValue="12"/>
                        </EventTrigger>
                    </Entry.Triggers>
                </Entry>
            </Border>

            <Label
                Style="{StaticResource labelStyleDefault}"
                Grid.Row="3"
                Grid.Column="0"
                Text="{Translate InterestEffective_Text}">
            </Label>

            <Border
                Style="{StaticResource borderStyleDefault}"
                Grid.Row="3"
                Grid.Column="1">

                <Label
                    x:Name="lblInterestEffective"
                    Style="{StaticResource labelStyleResult}">
                </Label>
            </Border>

            <Label
                Style="{StaticResource labelStylePercent}"
                Grid.Row="3"
                Grid.Column="2">
            </Label>

            <Button
                Style="{StaticResource buttonStyleCalculate}"
                Grid.Row="4"
                Grid.Column="0"
                Text="{Translate Calculate_Text}"
                ToolTipProperties.Text="{Translate Calculate_Text}"
                Clicked="CalculateResult">
            </Button>

            <Button
                x:Name="btnReset"
                Style="{StaticResource buttonStyleReset}"
                Grid.Row="4"
                Grid.Column="1"
                Text="{Translate Reset_Text}"
                ToolTipProperties.Text="{Translate Reset_Text}"
                Clicked="ResetEntryFields">
            </Button>
            
        </Grid>
    </ScrollView>
</ContentPage>
